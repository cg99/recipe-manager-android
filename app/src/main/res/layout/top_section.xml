<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="0dp">


    <!-- SearchView with a custom style to look like the uploaded image -->
    <androidx.appcompat.widget.SearchView
        android:id="@+id/search_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:queryHint="search recipe"
        app:iconifiedByDefault="false"
        android:focusedByDefault="false"
        app:searchIcon="@drawable/ic_search"
        app:closeIcon="@drawable/ic_clear"
        />

    <!-- Container for filter buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <!-- Italian filter button -->
        <Button
            android:id="@+id/button_italian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Italian"
            android:layout_marginEnd="8dp"/>

        <!-- Indian filter button -->
        <Button
            android:id="@+id/button_indian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Indian"
            android:layout_marginEnd="8dp"/>

        <!-- Chinese filter button -->
        <Button
            android:id="@+id/button_chinese"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chinese"
            android:layout_marginEnd="8dp"/>

        <!-- Filter icon button -->
        <Button
            android:id="@+id/button_filter"
            android:layout_width="wrap_content"
            android:text="@string/filter"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_filter"
            android:background="?android:attr/selectableItemBackground"
            android:textColor="@color/primary"
            />

    </LinearLayout>
</LinearLayout>
